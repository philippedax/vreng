#! /bin/sh
#
# start local httpd server
#
# Philippe Dax - jun 2017
#
conf=/etc/apache2/httpd.conf

if grep "# vreng" $conf ; then
  echo "already configured"
else
  echo "not configured"
  tmp=/tmp/httpd
  cp $conf $tmp
  cat conf/httpd.vreng >>$tmp
  sudo cp $tmp $conf
  sudo apachectl restart
fi
