#! /bin/sh
#
# build [args...]
#
# args are the same of ./configure [args...]
#
# - installs all requirements
# - launches needed servers
# - configures vreng
# - compiles vreng
#
# Philippe Dax - 2024
#
PATH=conf:$PATH export PATH

p=$(basename $0)

if [ ! -d log ]; then
  mkdir log >/dev/null 2>&1
fi
log=log/$p.log
date 2>&1 >>$log

# goto conf dir
cd conf

# suggests or installs requirements
./rc.prerequis

# launches X11 server
./rc.X11

# configures and launches local httpd server
./rc.httpd

# configures vreng
./autogen.sh "$@"

# comes bak to topdir
cd ..

# compiles vreng sources
make

date 2>&1 >>$log
cat $log
